#site.container(style="padding-top: 5rem; opacity: 0; transition: opacity 0.25s")
   .row.pt-2
      .col-lg-3.col-md-4.pb-4.px-4
         // profile
         .row
            .col-md-12.col-sm-4.col-3
               img.mb-2(src=urlProfileImage style="width: 100%; height: auto")
            .col-md-12.col-sm-8.col-9
               h2.card-title #{title}
               p.card-text #{description}
               - for (link of links) 
                  .link.text-one-line
                     a(href=link.url target="_blank") #[span.mr-1(class=link.icon)] #{link.text}
      .col-lg-9.col-md-8
         #projectList
            // search input
            .input-group.flex-nowrap.input-group-lg.pb-3.px-2
               input#searchInput.form-control(placeholder="Search projects..." style="width: 100%")
               .input-group-append
                  #searchButtonClear.btn.btn-outline-secondary.d-none #[.fa.fa-times] 
                  #searchButton.btn.btn-outline-primary Search 
            // alerts
            .alerts.px-2
            #alertNoresults.alert.alert-primary.text-center.d-none
               h2 #[.far.fa-sad-cry.outline]
               p No projects found using that search! 
            // projects
            .row.row-cols-md-2.row-cols-lg-3.row-cols-1.no-gutters
               -for (var i = 0; i < 6; i++)
                  .col.p-2.project-card.loading
                     .shadow
                        .project-card-view.mb-2
                           iframe
                        .p-2
                           h5.mb-1.text-one-line 
                           p.mb-1.text-one-line.text-lighten
                           .text-right.mt-2
                              .btn.btn-primary.btn-sm(data-id=i) #[span.fa.fa-expand.mr-1] open
            // pagination
            nav.mt-5#pagination
               ul.pagination.justify-content-center
                  li#prev.page-item #[a.page-link(href="#") previous]
                  li#next.page-item #[a.page-link(href="#") next]
            .text-right.mt-5.pb-5.pr-2
               small.text-lighten built using #[a(href="https://github.com/sean-codes/microprojects" target="_blank") microprojects #[.fab.fa-github]]
         
         #projectView.d-none
            .px-2.pb-2
               #projectViewButtonBack.btn.btn-primary.btn-lg.mb-1.mr-1 #[span.mr-1.fa.fa-chevron-left] Back
               a#projectViewButtonFullPageView.btn.btn-primary.btn-lg.mb-1.mr-1(rel="noreferrer" target="_blank") #[span.mr-1.fa.fa-expand] Full page view
               a#projectViewButtonSource.btn.btn-primary.btn-lg.mb-1(rel="noreferrer" target="_blank") #[span.mr-1.fa.fa-code] Source
            .px-2
               .shadow.p-3
                  h2 Gridventory
                  h5.text-lighten A project Subtitle!
                  .embed-responsive.embed-responsive-1by1
                     iframe.embed-responsive-item
script(type="application/json")#projectsJson
   include ../../www.json
